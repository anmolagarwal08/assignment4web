<div class="row">
    <div class="col-md-12">
        <br>
        <h2>Students</h2><hr>
        <div class="table-responsive">
            <table class="table">
                <br />
                <thead>
                    <tr>
                        <th>Student&nbsp;Num</th>
                        <th>Full&nbsp;Name</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Status</th>
                        <th>Course ID</th>
                    </tr>
                </thead>

                <tbody>
                    {{#each students}}
                    <tr>
                        <td> {{studentNum}} </td>
                        <td> <a href="/student/{{studentNum}}"> {{firstName}} {{lastName}} </a> </td>
                        <td> <a href="href=mailto:{{email}}"> {{ email }}</a> </td>
                        <td> {{ addressStreet }} {{ addressCity }} {{ addressProvince }} </td>
                        <td>{{status}}</td>
                        <td> <a href="/students?course={{course}}"> {{ course }}</a> </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

    <div class="col-md-12 text-center">
        {{#unless students}}
                <tr>
                    <th>Student&nbsp;Num</th>
                    <th>Full&nbsp;Name</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Status</th>
                    <th>Course ID</th>
                </tr>
            {{else}}
                <div class="col-md-12 text-center">
                    <strong>{{message}}</strong>
                </div>
        {{/unless}}
    </div>