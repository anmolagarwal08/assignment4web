<div class="row">
    <div class="col-md-12">
        <br>
        <h2>Courses</h2>
        <hr />
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>CourseId</th>
                        <th>Course&nbsp;Code</th>
                        <th>Course&nbsp;Description</th>
                    </tr>
                </thead>
                <tbody>
                        {{#each courses}}
                        <tr>    
                                <td>{{courseId}}</td>
                                <td> <a href="/course/{{courseId}}" name="courseCode">  
                                    {{courseCode}} </a> 
                                </td>
                                <td><a href="/students?course={{courseid}}">{{courseDescription}}  </a> <br /></td>
                        </tr>
                         {{/each}}
                        
                </tbody>
            </table>
        </div>

    </div>
</div>

<div class="col-md-12 text-center">
    {{#unless courses}}
        <tr>
            <th>CourseId</th>
            <th>Course&nbsp;Code</th>
            <th>Course&nbsp;Description</th>
        </tr>
    {{else}}
        <strong>{{message}}</strong>
    {{/unless}}
</div>